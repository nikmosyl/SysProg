	1) echo 'один';;
	2) echo 'два';;
	3) echo 'tri';;
	4) echo 'chetiryyy';;
	5) echo 'pyat';;
	6) echo 'шесть';;
	7) echo 'семь';;
	8) echo 'восемь';;
	9) echo 'девять';;
	0) echo 'ойооой это ноль';;
	*) echo 'ойоооой, подумай, дружок'
	esac
fi
